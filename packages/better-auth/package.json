{
  "name": "@proofkit/better-auth",
  "version": "0.4.0-beta.5",
  "description": "FileMaker adapter for Better Auth",
  "type": "module",
  "main": "dist/esm/index.js",
  "scripts": {
    "dev": "pnpm build:watch",
    "test": "vitest run",
    "test:e2e": "doppler run -c test_betterauth -- vitest run tests/e2e",
    "typecheck": "tsc --noEmit",
    "build": "vite build && publint --strict",
    "build:watch": "vite build --watch",
    "ci": "pnpm run build && pnpm run test",
    "prepublishOnly": "pnpm run build",
    "lint": "biome check . --write",
    "lint:summary": "biome check . --reporter=summary"
  },
  "bin": {
    "better-auth": "./dist/esm/cli/index.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "keywords": [
    "proofkit",
    "better-auth",
    "fmdapi",
    "proofgeist",
    "filemaker",
    "fmrest"
  ],
  "files": [
    "dist",
    "src"
  ],
  "author": "",
  "license": "ISC",
  "homepage": "https://proofkit.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/proofgeist/proofkit.git"
  },
  "dependencies": {
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@commander-js/extra-typings": "^14.0.0",
    "@proofkit/fmodata": "workspace:*",
    "@tanstack/vite-config": "^0.2.1",
    "better-auth": "^1.4.11",
    "c12": "^3.3.3",
    "chalk": "5.4.1",
    "commander": "^14.0.2",
    "dotenv": "^16.6.1",
    "fs-extra": "^11.3.3",
    "prompts": "^2.4.2",
    "vite": "^6.4.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/prompts": "^2.4.9",
    "@vitest/ui": "^3.2.4",
    "publint": "^0.3.16",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
