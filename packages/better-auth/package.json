{
  "name": "@proofkit/better-auth",
  "version": "0.1.0",
  "description": "FileMaker adapter for Better Auth",
  "type": "module",
  "main": "dist/esm/index.js",
  "scripts": {
    "dev": "pnpm build:watch",
    "test": "vitest run",
    "build": "vite build && publint --strict",
    "build:watch": "vite build --watch",
    "ci": "pnpm run build && pnpm run test",
    "prepublishOnly": "pnpm run ci"
  },
  "bin": {
    "better-auth": "./dist/esm/cli/index.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "keywords": [
    "proofkit",
    "better-auth",
    "fmdapi",
    "proofgeist",
    "filemaker",
    "fmrest"
  ],
  "files": [
    "dist",
    "src"
  ],
  "author": "",
  "license": "ISC",
  "homepage": "https://proofkit.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/proofgeist/proofkit.git"
  },
  "dependencies": {
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@commander-js/extra-typings": "^14.0.0",
    "@proofkit/fmdapi": "workspace:*",
    "@tanstack/vite-config": "^0.2.0",
    "better-auth": "^1.2.10",
    "c12": "^3.0.4",
    "chalk": "5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^16.5.0",
    "execa": "^9.5.3",
    "fm-odata-client": "^3.0.1",
    "fs-extra": "^11.3.0",
    "prompts": "^2.4.2",
    "vite": "^6.3.4",
    "zod": "3.25.64"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/prompts": "^2.4.9",
    "publint": "^0.3.12",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  }
}
